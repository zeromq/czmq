<project
    name = "czmq"
    script = "project.gsl"
    >

    <package_dependency name="zmq" pkg_name="libzmq" for_all="1" />

    <header name = "czmq" />
    <header name = "czmq_prelude" />

    <class name = "zactor" />
    <class name = "zauth" />
    <class name = "zarmour" />
    <class name = "zbeacon" />
    <class name = "zcert" />
    <class name = "zcertstore" />
    <class name = "zchunk" />
    <class name = "zclock" />
    <class name = "zconfig" />
    <class name = "zdigest" />
    <class name = "zdir" />
    <class name = "zdir_patch" />
    <class name = "zfile" />
    <class name = "zframe" />
    <class name = "zhash" />
    <class name = "zgossip" />
    <class name = "ziflist" />
    <class name = "zlist" />
    <class name = "zloop" />
    <class name = "zmonitor" />
    <class name = "zmsg" />
    <class name = "zpoller" />
    <class name = "zproxy" />
    <class name = "zrex" />
    <class name = "zring" />
    <class name = "zsock" />
    <class name = "zsock_option" />
    <class name = "zstr" />
    <class name = "zsys" />
    <class name = "zuuid" />

    <!-- Models that we build using GSL -->
    <model name = "sockopts" />
    <model name = "zgossip" />
    <model name = "zgossip_msg" />
    <class name = "zgossip_msg" private = "1" />

    <!-- Other source files in src that we need to package -->
    <extra name = "zgossip_engine.inc" />
    <extra name = "zhash_primes.inc" />
    <extra name = "zclass_example.xml" />

    <!-- Deprecated V2 API, remove some time after 3.0 stability -->
    <class name = "zauth_v2" />
    <class name = "zbeacon_v2" />
    <class name = "zctx" />
    <class name = "zmonitor_v2" />
    <class name = "zmutex" />
    <class name = "zproxy_v2" />
    <class name = "zsocket" />
    <class name = "zsockopt" />
    <class name = "zthread" />
</project>
